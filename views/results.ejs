  </head>

  <body>

    <%- include('partials/navbar')%>
    <%- messages('messages', locals) %>

    <div class="container m">

       <section class="filter_section mt-5">
        
        <form action="/filter/1" method="POST">
          <div class="row">
            <div class="filterBox col-lg-3 mb-3">
              <label class="d-block"  for="university">University filter</label>
              <input type="text" class="form-control" name="university" style="width: inherit;" placeholder="Filter by university">
            </div>
            <div class="filterBox col-lg-3 mb-3">
              <label class="d-block"  for="Course">Course filter</label>
              <input type="text" class="form-control" name="course" style="width: inherit;" placeholder="Filter by course">       
            </div>
            <div class="filterBox col-lg-3 mb-3">
              <label class="d-block"  for="topic">Year filter</label>
              <input type="text" class="form-control" name="year" style="width: inherit;" placeholder="Filter by year"> 
            </div>
            <div class="filterBox col-lg-3 mb-3">
              <label class="d-block"  for="category">Category filter</label>
              <select class="custom-select form-control" name="category">
                <option selected value="">Filter by category</option>
                <option value="Lecture Notes">Lecture Notes</option>
                <option value="Question Paper">Question Paper</option>
                <option value="Assignment">Assignment</option>
              </select>
              
            </div>
          </div>   
          <button type="submit" class="btn btn-outline-primary">Add filters
          </button>
        </form>
        
      </section>
       <hr>


      <section class="results mt-4">

        <h5>Trending Material :
        </h5>

        <% if(typeof(docs) !="undefined") { %>

          <% docs.forEach((doc) => { %>

            <div class="file mt-5">
              <div class="img">
                <img src="../images/thumbnail.jpg" alt="">
              </div>
              <div class="content">
                <div style="position: relative;">
                  <a href="/single_material/<%=doc._id%>" id="title_link"> <%= doc.title  %> </a>                  
                  <span class="material_type"><%= doc.category  %></span>
                </div>
                <h5 class="pt-2"><%= doc.topic  %></h5>
                <h5 class="pt-2"><%= doc.university  %></h5>
                <div class="date mb-4">
