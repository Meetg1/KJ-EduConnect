                <%})%>
                  <%}%>


                    <br>

          </section>

          <div style="text-align: center;">
            <% for (var i=1; i <=number_of_pages ; i++ ) { %>
              <% if (i==current_page) { %>
                <a href="../<%= redirect %>/<%= i %>"
                  style="border-style: solid; padding: 10px; text-decoration: none;">
                  <%=i %>
                </a> &nbsp;
                <%}else{%>
                  <a href="../<%= redirect %>/<%= i %>"
                    style="border: solid gray; padding: 10px; text-decoration: none; color: gray;">
                    <%=i %>
                  </a> &nbsp;
                  <%}%>
                    <% } %>
          </div>
          <br>
        </div>



        <script>
          $(function () {
            $('#universityName').autocomplete({
              source: function (req, res) {
                $.ajax({
                  url: "/autocompleteUniversity/",
                  dataType: "jsonp",
                  type: "GET",
                  data: req,
                  success: function (data) {
                    res(data)
                  },
                  error: function (err) {
                    console.log(err);
                  }
                });
              },
              minlength: 1,
              select: function (event, ui) {
                if (ui.item) {
                  $('#universityName').text(ui.item.label);
                }
              }


            });
          });
          $(function () {
            $('#courseName').autocomplete({
              source: function (req, res) {
                $.ajax({
                  url: "/autocompleteCourse/",
                  dataType: "jsonp",
                  type: "GET",
                  data: req,
                  success: function (data) {
                    res(data)
                  },
                  error: function (err) {
                    console.log(err);
                  }
                });
              },
              minlength: 1,
              select: function (event, ui) {
                if (ui.item) {
                  $('#courseName').text(ui.item.label);
                }
              }


            });
          });
        </script>