<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
   integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
<link rel="stylesheet" href="../stylesheets/reset-password.css">


</head>

<body>
 <%- messages('messages', locals) %>

   <% if(typeof(errors) !="undefined") { %>
      
      <% errors.forEach((error) => { %>
         <div class ="alert alert-danger"><%= error.msg  %></div>
      <%})%>
       
   <%}%>
   
   
   <section id='section1'>

  <div class="container2" style="">
    <div class="container1">        
         <h1 style="color:#696969;text-align: center;">Password Reset</h1>
                <hr>
                    <div class="formBx">
                        <p class="para" style="text-align: center;">Please fill in a new password and then submit.</p>
                        <div class="form">
                            <form action="/reset-password/<%= token %>" method="POST">
                               <label><p style="color: #4e657e;font-size:16px;margin-top:5px; text-align: left;">
                                New Password</p>
                                <input type="password" placeholder="New Password" maxlength="100"                                 
                                 class="form-control-edu input-password" data-test-selector="password-input" 
                                name="new_password" value="" required autofocus>
                               </label>
                               <label>
                                <p style="color: #4e657e;font-size:16px;margin-top:5px; text-align: left;">
                                    Confirm new password</p>
                                    <input type="password" placeholder="Confirm new password" maxlength="100"                                     
                                     class="form-control-edu input-password" data-test-selector="password-input" 
                                    name="confirm_password" value="" required autofocus>
                               </label>
                               <br>
                               <br>
                               <button type="submit" class="wide_button">Save and Submit password</button>
                               </form>
                    </div>
                </div>  
    </div>
   </div>
      
   </section>
   <br>
