        .step.active {
            opacity: 1;
        }

        @media (max-width: 901px) {
            .searchbar {
                width: 14em !important;
                margin-left: 0px;
            }

        }

        @import url("https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap");

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        #section1 {
            position: relative;
            min-height: 100vh;
            background-color: #1cc1e5;

            background-image: url("https://i.pinimg.com/originals/0d/af/b7/0dafb7928a99a9cb552a941895a6e586.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;

            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        section .container2 {
            position: relative;
            width: 700px;
            height: 450px;
            background: #fff;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        section .container2 .user {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
        }

        section .container2 .user .imgBx {
            position: relative;
            width: 50%;
            height: 100%;
            background: white;
            transition: 0.5s;
        }

        section .container2 .user .imgBx img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .imgBx img {
            padding: 40px;
        }

        section .container2 .user .formBx {
            position: relative;
            width: 50%;
            height: 100%;
            background: white;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            transition: 0.5s;
        }

        section .container2 .user .formBx form h2 {
            font-size: 18px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
            width: 100%;
            margin-bottom: 10px;
            color: #555;
        }

        section .container2 .user .formBx form input {
            position: relative;
            width: 100%;
            padding: 10px;
            background: #f5f5f5;
            color: #333;
            border: none;
            outline: none;
            box-shadow: none;
            margin: 8px 0;
            font-size: 14px;
            letter-spacing: 1px;
            font-weight: 300;
        }

        section .container2 .user .formBx form input[type="submit"] {
            max-width: 100px;
            background: #677eff;
            color: #fff;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            letter-spacing: 1px;
            transition: 0.5s;
        }

        section .container2 .user .formBx form .signup {
            position: relative;
            margin-top: 20px;
            font-size: 12px;
            letter-spacing: 1px;
            color: #555;
            text-transform: uppercase;
            font-weight: 300;
        }

        section .container2 .user .formBx form .signup a {
            font-weight: 600;
            text-decoration: none;
            color: #677eff;
        }

        section .container2 .signupBx {
            pointer-events: none;
        }

        section .container2.active .signupBx {
            pointer-events: initial;
        }

        section .container2 .signupBx .formBx {
            left: 100%;
        }

        section .container2.active .signupBx .formBx {
            left: 0;
        }

        section .container2 .signupBx .imgBx {
            left: -100%;
        }

        section .container2.active .signupBx .imgBx {
            left: 0%;
        }

        section .container2 .signinBx .formBx {
            left: 0%;
        }

        section .container2.active .signinBx .formBx {
            left: 100%;
        }

        section .container2 .signinBx .imgBx {
            left: 0%;
        }

        section .container2.active .signinBx .imgBx {
            left: -100%;
        }

        @media (max-width: 991px) {
            section .container2 {
                max-width: 400px;
            }

            section .container2 .imgBx {
                display: none;
            }

            section .container2 .user .formBx {
                width: 100%;
            }
        }

        .loginBtn {
            box-sizing: border-box;
            position: relative;
            /* width: 13em;  - apply for fixed size */
            margin: 0.2em;
            padding: 0 15px 0 46px;
            border: none;
            text-align: left;
            line-height: 34px;
            white-space: nowrap;
            border-radius: 0.2em;
            font-size: 16px;
            color: #FFF;
        }

        .loginBtn:before {
            content: "";
            box-sizing: border-box;
            position: absolute;
            top: 0;
            left: 0;
            width: 34px;
            height: 100%;
        }

        .loginBtn:focus {
            outline: none;
        }

        .loginBtn:active {
            box-shadow: inset 0 0 0 32px rgba(0, 0, 0, 0.1);
        }

        .loginBtn--google {
            /*font-family: "Roboto", Roboto, arial, sans-serif;*/
            background: #DD4B39;
        }

        .loginBtn--google:before {
            border-right: #BB3F30 1px solid;
            background: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/14082/icon_google.png') 6px 6px no-repeat;
        }

        .loginBtn--google:hover,
        .loginBtn--google:focus {
            background: #E74B37;
        }


        .navbar {
            background-color: #E7E8E9;
            /* padding-top: 20px;
            padding-bottom: 30px; */
            border-color: black;
        }

        .navbar-brand {
            margin-right: 15px;
            width: 17%;
        }

        .dropdown-item {
            font-size: 14px;
            padding: 0px;
        }



        @media (max-width:901px) {
            .navbar {
                padding-bottom: 15px;
            }

            .navbar-brand {
                width: 30%;
                margin-right: 5px;
            }

        }
    </style>

</head>




<body>

    <%- include('partials/navbar')%>
        <%- messages('messages', locals) %>


            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-11 col-sm-9 col-md-9  
                  col-lg-9 col-xl-10 text-center p-0 mt-3 mb-2">
                        <div class="px-0 pt-4 pb-0 mt-3 mb-3">
                            <div id="form">
                                <ul id="progressbar">
                                    <li class="active" id="step1">
                                        <strong>Course</strong>
                                    </li>
                                    <li id="step2"><strong>Upload</strong></li>
                                    <li id="step3"><strong>Details</strong></li>
                                    <li id="step4"><strong>Success</strong></li>
                                </ul>

                                <fieldset>
                                    <div class="step">
                                        <p class="mt-4">Step 1: Choose a course for which you'd like to upload documents
                                        </p>
                                        <form id="form1">
                                            <div class="form-group row">
                                                <label for="uni" class="col-form-label" id="uni">University<span
                                                        class="text-danger">*</span> :</label>
                                                <div class="col-sm-10">
                                                    <input type="text" placeholder="Select university"
                                                        class="form-control" name="university">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="course" class="col-form-label" id="course">Course<span
                                                        class="text-danger">*</span>:</label>
                                                <div class="col-sm-10">
                                                    <select class="custom-select form-control" name="course">
                                                        <option selected value="">Select a course/degree</option>
                                                        <% for( let i=0; i < courses.length; i++ ) { %>
                                                            <option value="<%=courses[i]%>">
                                                                <%=courses[i]%>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <input type="button" name="next-step" class="next-step btn btn-primary"
                                        value="Next Step" />
                                </fieldset>
                                <fieldset>
                                    <div class="step">
                                        <form action="/uploadfile" class="dropzone" id="my-awesome-dropzone"></form>
                                    </div>
                                    <input type="button" name="next-step" class="next-step btn btn-primary"
                                        value="Next Step" />
                                    <input type="button" name="previous-step"
                                        class="previous-step btn btn-outline-primary" value="Previous Step" />
                                </fieldset>
                                <fieldset>
                                    <p class="mt-4">Step 2: Please enter the following details: </p>
                                    <form id="form2">
                                        <div class="form-group row">
                                            <label for="uni" class="col-form-label" id="uni">Title<span
                                                    class="text-danger">*</span>:</label>
                                            <div class="col-sm-10">
                                                <input type="text" placeholder="Select title" class="form-control"
                                                    name="title">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="course" class="col-form-label" id="course">Category<span
                                                    class="text-danger">*</span>:</label>
                                            <div class="col-sm-10 col-lg-5">
                                                <select class="custom-select form-control" name="category">
                                                    <option selected value="">Select a category</option>
                                                    <option value="Lecture Notes">Lecture Notes</option>
                                                    <option value="Question Paper">Question Paper</option>
                                                    <option value="Assignment">Assignment</option>
                                                </select>
                                            </div>
                                            <label for="uni" class="col-form-label" style="width: 135px;"
                                                id="uni">Academic Year<span class="text-danger">*</span>:</label>
                                            <div class="col-sm-10 col-lg-3">
                                                <input type="text" placeholder="2018" class="form-control" name="year">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="subject" class="col-form-label" id="subject">Subject<span
                                                    class="text-danger">*</span>:</label>
                                            <div class="col-sm-10 col-lg-5">
                                                <select class="custom-select form-control" name="subject">
                                                    <option selected value="">Select a subject</option>
                                                    <% for( let i=0; i < subjects.length; i++ ) { %>
                                                        <option value="<%=subjects[i]%>">
                                                            <%=subjects[i]%>
                                                        </option>
                                                        <% } %>
                                                </select>
                                            </div>
                                            <label for="uni" class="col-form-label" style="width: 135px;"
                                                id="uni">Number of pages<span class="text-danger">*</span>:</label>
                                            <div class="col-sm-10 col-lg-3">
                                                <input type="text" placeholder="Select" class="form-control"
                                                    name="num_pages">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="uni" class="col-form-label" id="uni">Description<span
                                                    class="text-danger">*</span>:</label>
                                            <div class="col-sm-10 text-left">
                                                <textarea name="description" id="" cols="0" rows="5"></textarea>
                                            </div>
                                        </div>

                                        <!-- <div class="form-group row">
                                   <label>Preview Pictures<span class="text-danger">*</span>: </label> &nbsp;&nbsp;Please upload 2-4 preview images, including index if possible.                         
                                </div> -->
                                    </form>
                                    <!-- <div class="step">                                
                                <form action="/uploadpics" class="dropzone d1" id="my-awesome-dropzone"></form>                                
                            </div>                           -->


                                    <button type="submit" form="form2" class="next-step btn btn-primary">
                                        Finish</button>
                                    <input type="button" name="previous-step"
                                        class="previous-step btn btn-outline-primary" value="Previous Step" />
                                </fieldset>
                                <fieldset>
                                    <div class="step">
                                        <div class="success-box">
                                            <img src="../images/green-tick.png" alt="" class="upload-img">
                                            <div class="pt-3">
                                                <h3>Successful!</h3>
                                                <p>Thank you! Your file has been uploaded.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <h3 class="text-left ml-5 text-success">You earned:</h3>
                                    <div class="earned">
                                        <div class="earned-card">
                                            <h4 class="text-warning"> <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                    height="16" fill="currentColor" class="bi bi-lightning-fill"
                                                    viewBox="0 0 16 16">
                                                    <path
                                                        d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z" />
                                                </svg> 60 points!</h4>
                                            <p>Points can be used to download other uploaded documents.</p>
                                        </div>
                                        <div class="earned-card">
                                            <h4 class="text-pink"> <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                    height="16" fill="currentColor" class="bi bi-heart-fill"
                                                    viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd"
                                                        d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                                </svg> Karma!</h4>
                                            <p>Your documents will help students all over the world.</p>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>









            <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns"
                crossorigin="anonymous">
                </script>
            <script src="/javascripts/upload.js"></script>



</body>

<%- include('partials/footer')%>

</html>