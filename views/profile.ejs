<% layout('layouts/boilerplate') %>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
  integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
<link rel="stylesheet" href="../stylesheets/profile.css">
</head>

<body>




  <%- include('partials/navbar')%>
  <%- messages('messages', locals) %>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="profile-user-settings">
        <h1 class="profile-user-name"><%= user.fullname %></h1>
        <%if(currentUser && !user._id.equals(currentUser._id)) { %>
        <% if (user.followers.some(function(follower) {
              return currentUser._id.equals(follower)
            })){ %>
        <a href="/users/<%=user._id%>/unfollow" class="btn btn-outline-primary followBtn">Unfollow</a>
        <%}else{%>
        <a href="/users/<%=user._id%>/follow" class="btn btn-outline-primary followBtn">Follow</a>
        <%}%>
          <% } %>

        <div class="box row">
          <div class="wrapper col-md-2 col-6">
            <img src="../profilePic/<%=user.profilePic %>" alt="" class="image--cover" />
            <%if(currentUser && user._id.equals(currentUser._id)) { %>
            <form id="form_pic" action="/uploadprofile" method="POST" enctype="multipart/form-data">
              <input type="file" name="file" value="edit profile">
              <button type="submit" class="next-step btn btn-primary">Reset Pic</button>
              <br>
            </form>
            <%}%>
            </div>
          </div>
        </div>
        <br>
        <div class="univ" href="#"><%= user.university %></div>
          <div class="univ mt-2" href="#"><%= user.username %></div>
          <div class="profile-stats">
            <ul class="pl-0">
              <br>
              <li><span class="profile-stat-count"><strong><%= user.uploads %></strong></span> Uploads</li>
              <li><span class="profile-stat-count"><strong><%= user.followerCount %></strong></span> followers</li>
            </ul>
          </div>
        </div>

      </div>
    </div>
    <div class="container pl-0">
      <section class="statFigures mt-5">
        <h1 class="format">Stats & Figures</h1>
        <div class="statBox row mt-5">
          <div class="uploadBox col-md-5 col-11">
            <h4 class="color">Uploads<svg class="star1" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                fill="currentColor" class="bi bi-file-earmark-arrow-up-fill" viewBox="0 0 16 16">
                <path
                  d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM6.354 9.854a.5.5 0 0 1-.708-.708l2-2a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 8.707V12.5a.5.5 0 0 1-1 0V8.707L6.354 9.854z" />
              </svg></h4>
            <hr>
            <div class="numBox">
              <div class="num"><span><strong><%= user.notes_uploads %></strong></span></div>
              <div class="num"><span><strong><%= user.papers_uploads %></strong></span></div>
              <div class="num"><span><strong><%= user.assignments_uploads %></strong></span></div>
            </div>
            <div class="numBox">
              <div class="num ml-4 light"> notes</div>
              <div class="num ml-5 light"> papers</div>
              <div class="num ml-3 light"> Assignments</div>
            </div>

          </div>
          <div class="pointBox col-md-2 col-6">
            <h4 class="color clr">Points <svg class="star" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path
                  d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
              </svg></h4>
            <hr>
            <div class="numBox">
              <div class="num"><span><strong><%= user.points %></strong></span></div>
            </div>
            <div class="numBox">
              <div class="num ml-2 light">total</div>
            </div>
          </div>
          <div class="pointBox col-md-2 col-6">
            <h4 class="color">Upvotes <svg class="star2" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                fill="currentColor" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                <path
                  d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.964.22.817.533 2.512.062 4.51a9.84 9.84 0 0 1 .443-.05c.713-.065 1.669-.072 2.516.21.518.173.994.68 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.162 3.162 0 0 1-.488.9c.054.153.076.313.076.465 0 .306-.089.626-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.826 4.826 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.616.849-.231 1.574-.786 2.132-1.41.56-.626.914-1.279 1.039-1.638.199-.575.356-1.54.428-2.59z" />
              </svg></h4>
            <hr>
            <div class="numBox">
              <div class="num"><span><strong><%= user.upvotes %></strong></span></div>
            </div>
            <div class="numBox">
              <div class="num ml-2 light">total</div>
            </div>
          </div>

        </div>

    </div>
    </section>
    <br>
