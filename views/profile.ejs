          <form action='/single_material/<%=doc._id%>?_method=DELETE' method="POST">
            <button class="btn btn-xs btn-danger mgn">Delete</button>
          </form>
          <% } %>
        </div>
        <hr style="margin-top : 55px;">

        <%})%>
        <%}%>
    <%}%>

      </section>

    </div>
    </div>
  </div>