    <body>
        <%- include('partials/navbar')%>
        <div class="l-wrapper" style="margin-top:70px;">
            <!-- <div class="c-header"><img class="c-logo" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/813538/km-logo-color.svg" draggable="false" /><button class="c-button c-button--primary">Send Kudos</button></div>
