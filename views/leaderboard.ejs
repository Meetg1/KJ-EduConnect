            <div class="l-grid">
                <div class="l-grid__item l-grid__item--sticky">
                    <div class="c-card  u-text--dark">
                        <div class="c-card__body">
                            <img src="../profilePic/<%=logged_in_user.profilePic %>" class="image--cover">
                            <div class="u-display--flex u-justify--space-between">

                                <div class="u-text--left">

                                    <div class="u-text--small"><b>My Rank</b></div>
                                    <h2>
                                       <b><%= logged_in_rank + 1%></b> 
                                    </h2>
                                </div>
                                <div class="u-text--right">
                                    <div class="u-text--small"><b>My Points</b></div>
                                    <h2>
                                      <b><%= logged_in_user.level_points %></b>  
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="c-card">
                        <div class="c-card__body">
                            <div class="u-text--center" id="winner">
